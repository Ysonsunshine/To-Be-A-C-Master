#include <iostream>
#include <vector>
#include <map>
#include <algorithm>

using namespace std;

//宏定义
#define CEHUA   0
#define CHANPIN 1
#define JISHU   2

class Worker
{
public:

	string m_name;
	int m_salary;
};

void creatvector(vector<Worker>&v)
{
	string abu = "ABCDEFGH";
	for (int i = 0; i < 8; i++)
	{
		Worker w;
		w.m_name = "员工";
		w.m_name += abu[i];
		w.m_salary = rand()%10000+10000;
		v.push_back(w);
	}
}

void showvector(vector<Worker>&v)
{
	for (vector<Worker>::iterator it = v.begin(); it != v.end(); it++)
	{
		cout << "姓名："<<it->m_name<<"  "<<"薪水："<<it->m_salary<<endl;
	}
}
void creatmultimap(multimap<int, Worker>&m, vector<Worker>& v)
{
	int num;
	for (vector<Worker>::iterator it = v.begin(); it != v.end(); it++)
	{
		int num = rand() % 3;
		m.insert(make_pair(num,*(it)));
	}
	
}

void showmap(multimap<int, Worker>& m)
{
	cout << "策划部：" << endl;
	multimap<int, Worker>::iterator pos = m.find(CEHUA);
	int count = m.count(CEHUA);
	int index = 0;
	for (; pos != m.end() && index < count; pos++, index++)
	{
		cout << "姓名：" << pos->second.m_name << "  " << "薪水：" << pos->second.m_salary << endl;
	}

	cout << "产品部：" << endl;
	pos = m.find(CHANPIN);
	count = m.count(CHANPIN);
	index = 0;
	for (; pos != m.end() && index < count; pos++, index++)
	{
		cout << "姓名：" << pos->second.m_name << "  " << "薪水：" << pos->second.m_salary << endl;
	}

	cout << "技术部：" << endl;
	 pos = m.find(JISHU);
	count = m.count(JISHU);
	index = 0;
	for (; pos != m.end() && index < count; pos++, index++)
	{
		cout << "姓名：" << pos->second.m_name << "  " << "薪水：" << pos->second.m_salary << endl;
	}
}
void test01()
{
	srand((unsigned int)time(NULL));
	vector<Worker>v;
	multimap<int, Worker>m;
	creatvector(v);
	//showvector(v);
	creatmultimap(m,v);
	showmap(m);
}

int main()
{
	test01();

	system("pause");
	return 0;
}
